<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    android:layout_marginBottom="@dimen/magic_margin"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@android:drawable/ic_menu_gallery"
            android:scaleType="centerCrop"
            android:contentDescription="Thumbnail"/>

        <TextView
            android:id="@+id/video.name"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_toRightOf="@+id/thumbnail"
            android:layout_toEndOf="@+id/thumbnail"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/magic_margin"
            android:layout_marginLeft="@dimen/magic_margin"
            android:layout_marginStart="@dimen/magic_margin"
            android:textStyle="bold"
            android:text="@string/interrogation_mark" />

        <TextView
            android:layout_below="@+id/video.name"
            android:id="@+id/song.title"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_toRightOf="@+id/thumbnail"
            android:layout_toEndOf="@+id/thumbnail"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/magic_margin"
            android:layout_marginStart="@dimen/magic_margin"
            android:text="@string/interrogation_mark" />

        <TextView
            android:layout_below="@+id/song.title"
            android:id="@+id/song.artist"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_toRightOf="@+id/thumbnail"
            android:layout_toEndOf="@+id/thumbnail"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/magic_margin"
            android:layout_marginStart="@dimen/magic_margin"
            android:text="@string/interrogation_mark" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/video.name"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/video.name"
            android:layout_marginBottom="@dimen/magic_margin"
            android:layout_marginEnd="@dimen/magic_margin"
            android:layout_marginRight="@dimen/magic_margin"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>